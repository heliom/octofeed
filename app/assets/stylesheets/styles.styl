@import "nib"
@import "utils/reset"
@import "utils/mixins"

// Variables -----------------------------------------------------------------
$bluecolor = #4183c4

// Utils ---------------------------------------------------------------------
.dark-grey-gradient
  background: #9c9c9c
  background: -webkit-linear-gradient(#9c9c9c, #5d5b5b)
  background: -moz-linear-gradient(#9c9c9c, #5d5b5b)
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#9c9c9c',endColorstr='#5d5b5b')"

.grey-gradient
  background: #fafafa
  background: -webkit-linear-gradient(#fafafa, #eaeaea)
  background: -moz-linear-gradient(#fafafa, #eaeaea)
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafafa',endColorstr='#eaeaea')"

.blue-gradient
  background: #599bdc
  background: -webkit-linear-gradient(#599bdc, #3072b3)
  background: -moz-linear-gradient(#599bdc, #3072b3)
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#599bdc',endColorstr='#3072b3')"

.clearfix
  &:after
    display: block
    content: ''
    clear: both

// Base ----------------------------------------------------------------------
* { box-sizing: border-box }

html
  font-size: 62.5%
  height: 100%
  -webkit-text-size-adjust: none

body
  font-size: 13

body, legend, input, textarea, button
  font-family: Helvetica, Arial, sans-serif
  line-height: 1.4
  color: #333

a { color: $bluecolor }
a:focus, a:hover { text-decoration: underline }

p, ul, ol, dl, blockquote, table, figure { margin: 0 }
li { list-style-type: none }

// Headings ------------------------------------------------------------------
hgroup > :first-child { margin-bottom: .3em }
hgroup > :first-child + * { margin-top: .3em }

h1, h2, h3, h4 { line-height: 1.1 }
h2
  margin: 1em 0 1.5em
  color: #495961
  font-size: 27
  font-weight: lighter

// Header ---------------------------------------------------------------------
header
  @extends .grey-gradient
  height: 47px
  box-shadow: 0 1px 0 rgba(255,255,255,.4), 0 0 10px rgba(0,0,0,.1)
  border-bottom: 1px solid #cacaca

  .container { padding: 0 }

  h1
    float: left
    margin: 0
    font-size: 24
    line-height: 49px

  a
    color: #222
    text-shadow: 0 1px 0 rgba(255,255,255,.5)

    &:hover, &:focus
      color: #4183c4
      text-decoration: none

  .nav
    float: right
    font-weight: bold
    line-height: 49px

    a.subtle
      color: rgba(0,0,0,.5)
      font-size: 12
      font-weight: normal

      &:hover, &:focus { color: #4183c4 }

    .user
      float: left
      margin-right: .75em

      a { float: left }

      img
        position: relative
        top: -2px
        vertical-align: middle
        border-radius: 3px
        margin-right: .35em

// Layout ---------------------------------------------------------------------
pre, code {
  font-size: 12
  font-family: Consolas, Menlo, "Liberation Mono", Courier, monospace
}

.container
  @extends .clearfix
  width: 93%
  max-width: 560px
  margin: auto
  padding: 1.9em 0 0

.button
  @extends .grey-gradient
  display: inline-block
  padding: .6em 1.15em
  border-radius: 3px
  border: 1px solid #ddd
  border-bottom-color: #bbb
  color: #333
  font-weight: bold
  text-shadow: 0 1px 0 #fff


  &.login-with-gh
    @extends .clearfix
    margin: 1.5em 0 0

    .github-logo
      display: inline-block
      background-image: url(/images/github.png)
      size: 16px 17px
      position: relative
      top: -2px
      vertical-align: middle

.button:hover, .button:focus
  @extends .blue-gradient
  color: #fff
  border-color: #518cc6
  border-bottom-color: #2a65a0
  text-decoration: none
  text-shadow: 0 -1px 0 rgba(0,0,0,.3)

  &.login-with-gh .github-logo { background-position: 0 -17px }

// Login ----------------------------------------------------------------------
.login
  text-align: center
  text-shadow: 0 1px 0 rgba(255,255,255,.5)

  h1 { margin: 0 0 .75em }
  p { color: #666 }
  strong { color: #333 }

  .public, .private
    background-color: #f4f4f4
    background: linear-gradient(top, #fcfcfc, #f4f4f4)
    border: 1px solid #ddd
    border-bottom-color: #ccc
    border-bottom-width: 2px
    border-radius: 0 0 3px 3px
    padding: 2em
    font-size: 15

  .private
    background-color: #eaf2f5
    background: linear-gradient(top, #f5f9fa, #e1edf4)
    border-bottom: 1px solid #c8dde5
    border-radius: 3px 3px 0 0

  .public
    border-top: none

  .button
    margin: 1.25em 0 0

  .col-1
    margin: 3em 0 0
    text-align: left

// Btn More -------------------------------------------------------------------
.more
  @extends .grey-gradient
  border: 1px solid #d4d4d4
  border-bottom-color: #bcbcbc
  display: block
  margin: 1.3em 0 0
  padding: .75em 1em
  overflow: hidden
  color: #333
  font-weight: bold
  font-size: 15
  text-align: center
  text-shadow: 0 1px 0 #fff
  border-radius: 3px

  &.loading, &:hover.loading
    background: url(/images/octocat-spinner.gif) center center no-repeat
    text-indent: -9999px
    border: 1px solid #d4d4d4

  &:hover, &:focus
    @extends .blue-gradient
    border: 1px solid #518cc6
    border-bottom-color: #2a65a0
    color: #fff
    text-decoration: none
    text-shadow: 0px -1px 0px rgba(0,0,0,.3)

// EventGroup ----------------------------------------------------------------
.group
  position: relative
  padding: 1.25em 0
  min-height: 75px
  border-radius: 3px

  h1
    border-bottom: 1px solid #e0e0e0
    position: relative
    margin: 0
    padding: 0 0 .5em 62px
    font-size: 17
    font-weight: normal

    & > span { color: #666 }

    .repo
      font-weight: bold
      margin: 0 .2em 0 0

    .extra
      display: inline-block

      a
        @extends .dark-grey-gradient
        padding: .18em .45em
        position: relative
        top: -1px
        padding: 2px 5px
        color: #fff
        font-size: 11
        line-height: 1.2
        border-radius: 2px
        text-shadow: 0 -1px 0 rgba(0,0,0,.2)
        opacity: .7

        &:hover, &:focus
          opacity: 1
          text-decoration: none

    .avatar
      display: block
      position: absolute
      top: 0; left: 0

      &:hover img, &:focus img
        border-color: #6991d1

  img
    background-color: #fff
    vertical-align: middle
    padding: 1px
    border: 1px solid #d0d0d0
    border-radius: 2px

  & > ul { padding: 1px 0 0 51px }

  .group + .group
    margin: 1em 0 0

// Event ---------------------------------------------------------------------
.Event
  position: relative
  padding: 0 11px

  .title { font-weight: bold }

  .body
    color: #555
    overflow: ellipsis
    * { overflow: ellipsis }
    li + li { padding: .23em 0 0 }

  blockquote
    color: #777
    padding: .15em 0 0

  time
    padding-left: .25em
    color: #c4c4c4
    color: rgba(0,0,0,.3)
    font-size: 11px
    font-weight: normal

.Event:first-child { padding-top: .65em }

.new { background-color: #eaf2f5 }
.new:last-child { padding-bottom: .65em }

.user-group
  h1 a { font-weight: bold }

  .title
    img, .username { display: none }

.repo-group
  .Event { padding-bottom: .5em }
  .Event + .Event { padding-top: .5em }

  .body
    min-height: 35px
    padding: 0 0 0 36px

  .title
    position: relative

    img
      position: absolute
      bottom: -32px; left: 0
      padding: 1px

// PushEvent -----------------------------------------------------------------
.PushEvent
  blockquote
    display: inline
    font-size: 12

  .title img { bottom: -33px }

  .body
    padding-top: .3em

    img
      vertical-align: bottom

    .diff
      display: block;
      margin: .2em 0 0 24px
      font-size: 12

// FollowEvent ---------------------------------------------------------------
.current-user
  & > ul
    @extends .clearfix
    padding: .65em 0 0 62px

  .FollowEvent
    float: left
    padding: 0

    a:hover img, a:focus img { border-color: #6991d1 }

  .FollowEvent + .FollowEvent { margin-left: .5em }

// DeleteEvent ---------------------------------------------------------------
.DeleteEvent
  .body span { color: #808080 }

// 404 -----------------------------------------------------------------------
.four-o-four
  h2 { margin-bottom: .5em }

// Footer --------------------------------------------------------------------
footer
  color: #aaa
  padding: 1em 0 2em
  text-align: center

  p { margin: .2em 0 }

// Media Queries -------------------------------------------------------------
@import "mediaqueries"
